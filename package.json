{
  "name": "fiecon-consulting",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "./kill-port.sh && next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "deploy": "pnpm build && rsync -avz --delete --exclude '.env*' .next/ public/ package.json pnpm-lock.yaml next.config.ts middleware.ts src/i18n/ src/messages/ ${DEPLOY_TARGET:-user@server:/var/www/fiecon/} && echo 'Deploy complete. Run: ssh <server> \"cd /var/www/fiecon && pnpm install --prod && pm2 restart fiecon\"'"
  },
  "dependencies": {
    "motion": "^12.0.0",
    "next": "^15.1.0",
    "next-intl": "^4.0.0",
    "nodemailer": "^8.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@tailwindcss/postcss": "^4.0.0",
    "@types/node": "^22.0.0",
    "@types/nodemailer": "^7.0.9",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "eslint": "^9.17.0",
    "eslint-config-next": "^15.1.0",
    "tailwindcss": "^4.0.0",
    "typescript": "^5.7.0"
  }
}
